<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutTrailer"
    android:layout_width="300dp"
    android:layout_height="75dp"
    android:layout_gravity="center"
    android:layout_marginHorizontal="2dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/imageViewPlayIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="3dp"
            android:layout_marginEnd="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/textViewTrailerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="3dp"
            android:ellipsize="end"
            android:fontFamily="@font/geologica_regular"
            android:gravity="start"
            android:maxLines="2"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewPlayIcon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Трейлер №1 Трейлер №1 Трейлер №1 Трейлер №1 Трейлер №1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>